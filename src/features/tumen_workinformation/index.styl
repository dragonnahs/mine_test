@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  background: #fff
  #appbox
    width: 100vw
    min-height: 100vh
    display: flex
    flex-direction: column
    box-sizing: border-box
    .main_content
      flex: 1 1 auto
      overflow-y: scroll
      padding: 0 15px
      .inputbox
        box-sizing: border-box
        border-bottom: 1px solid #F5F5F5
        display: flex
        justify-content: flex-start
        align-items: center
        height: 46px
        .lablebox
          font-size: 14px
          font-family: PingFangSC-Regular, PingFang SC
          font-weight: 400
          color: #333333
        .comminput
          outline: none
          border: none
          height: 44px
          padding: 15px 10px
          box-sizing: border-box
          font-size: 14px
          flex: 1 1 auto
          &:placeholder-shown::placeholder
            color: #999
        .unitTip
          font-size: 14px
          color: #333
      .uploadTip
        margin: 16px 0 12px
        font-family: PingFangSC-Regular, PingFang SC
        font-weight: 400
        color: #333333
        font-size: 14px
        .imgLimit
          font-size: 12px
          color: #999
          padding-top: 4px
      .uploadcontent
        display: flex
        justify-content: flex-start
        flex-wrap: wrap
        .uploadfile
          position relative
          width 111px
          height: 111px
          border-radius: 6px
          margin: 0 6px 6px 0
          &:nth-child(3n+3)
            margin-right: 0
          .bgup
            height: 111px
            width 111px
            object-fit: cover
            border-radius: 6px
          .filebox
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            opacity 0
        .deleteImg
          position: absolute
          width: 40px
          height: 40px
          top: 0
          right: 0
    .authbtn
      flex: 0 0 auto
      text-align: center
      padding: 14px 0px 32px
      box-sizing: border-box
      .authok_btn
        width: 345px
        height: 44px
        object-fit: contain
    .uploadprogress_modal
      position: fixed
      top: 0
      left: 0
      right: 0
      bottom: 0
      background: #000
      opacity 0.5
      display: flex
      justify-content: center
      align-items: center
      color: #fff
      font-size: 16px