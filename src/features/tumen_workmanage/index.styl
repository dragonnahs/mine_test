@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  #appbox
    width: 100vw
    min-height: 100vh
    .listbox
      padding: 5px 15px 20px
      box-sizing: border-box
      .bottom_tip
        color: #333
        opacity: 0.6
        text-align: center
        font-size: 12px
      .list_item
        margin-bottom: 10px
        display: flex
        justify-content: flex-start
        .leftImg
          width: 80px
          height: 80px
          border-radius: 6px
          &.default_img
            background: url('../../assets/tu_starplan/error_img.png') no-repeat center 100%/100%
        .rightBox
          margin: 4px 0 0 8px
          flex: 1 1 auto
          font-size: 0
        .titleTop
          font-size: 14px
          font-family: PingFangSC-Regular, PingFang SC
          font-weight: 400
          color: #333
          line-height: 20px
        .statusBox
          margin-top: 12px
          padding: 0 10px
          height: 22px
          line-height: 22px
          background: #F6F6F6
          border-radius: 22px
          font-size: 12px
          font-weight: 400
          display: inline-block
          font-family: PingFangSC-Regular, PingFang SC;
        .success
          color: #34BBFF
        .wait
          color: #999
        .faile
          color: #FF8C3F
    .nodata_box
      display: flex
      justify-content: center
      align-items: center
      flex-wrap: wrap
      width: 100vw
      height: 100vh
    .no_img
      width: 127px
      height: 136px
    .tips_nodata
      font-size: 14px
      font-family: PingFangSC-Regular, PingFang SC
      font-weight: 400
      color: #A0A0A0
      margin-top: 20px
      width: 100vw
    .nocontent
      text-align: center

