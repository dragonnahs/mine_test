@import '../../styles/index.styl';
body,html
  size(100%, 100%)
  #appbox
    width: 100vw
    min-height: 100vh
    display: flex
    flex-direction: column
    box-sizing: border-box
    .tip_box
      font-size: 12px
      font-family: PingFangSC-Regular, PingFang SC
      font-weight: 400
      color: #999999
      width: 100vw
      text-align: center
      height: 27px
      line-height: 27px
      background: #F2F2F2
    .main_content
      flex: 1 1 auto
      padding: 0 15px
      .input_box
        display: flex
        justify-content: flex-start
        align-items: center
        margin-top: 28px
      .lablebox
        font-size: 14px
        font-family: PingFangSC-Regular, PingFang SC
        font-weight: 400
        color: #333333
        margin-right: 10px
        width: 60px
      .inputbox
        border: none
        outline: none
        padding:12px 10px
        width: 260px
        box-sizing: border-box
        font-size: 14px
        background: #F3F4F5
        &:placeholder-shown::placeholder
          color: #C3C4C5
      .ID_box
        padding-top: 30px
        .title_tip
          font-size: 14px
          font-family: PingFangSC-Regular, PingFang SC
          font-weight: 400
          color: #333333
        .ID_main
          display: flex
          justify-content: space-between
          align-items: center
          margin-top: 18px
          .idcommon_box
            width: 165px
            height: 144px
            background: #FFFFFF
            box-shadow: 0px 0px 11px 0px rgba(234, 234, 234, 0.92)
            border-radius: 8px
            padding: 10px 10px 0
            box-sizing: border-box
            position: relative
          .bgID
            width: 145px
            height: 92px
            background-image: url('../../assets/tu_starplan/bg_card.png')
            background-size: 100%
            text-align: center
            padding-top: 2px
          .posovie_id
            width: 139px
            height 88px
            object-fit: cover
          .tipupload
            overflow: hidden
            text-align: center
            padding-top: 10px
            .uptip
              font-size: 14px
              font-family: PingFangSC-Regular, PingFang SC
              font-weight: 400
              color: #999999
            .active
              color: #00AAFF
            .fileUploadbox
              position: absolute
              top: 0
              left: 0
              width: 100%
              height: 100%
              opacity 0

    .btn_ok
      flex: 0 0 auto
      text-align: center
      padding-bottom: 24px
      .btn_img
        width: 345px
        height: 44px
    